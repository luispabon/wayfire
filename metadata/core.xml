<?xml version="1.0"?>
<wayfire>
	<plugin name="core">
	<_short>General Options</_short>
	<category>General</category>
	<option name="plugins" type="string" hidden="true">
		<_short>Plugins</_short>
		<default>resize command vswitch oswitch grid window-rules autostart wrot place invert animate move switcher fast-switcher fisheye zoom expo cube wobbly decoration alpha idle</default>
	</option>
	<option name="close_top_view" type="activator">
		<_short>Close Window</_short>
		<default>&lt;super&gt; KEY_Q | &lt;alt&gt; KEY_F4</default>
	</option>
	<option name="xwayland" type="bool">
		<_short>Xwayland</_short>
		<default>true</default>
	</option>
	<option name="vwidth" type="int">
		<_short>Horizontal Virtual Size</_short>
		<default>3</default>
	</option>
	<option name="vheight" type="int">
		<_short>Vertical Virtual Size</_short>
		<default>3</default>
	</option>
	<option name="background_color" type="color">
		<_short>Background Color</_short>
		<default>0.0 0.0 0.0 1.0</default>
	</option>
	<option name="preferred_decoration_mode" type="string">
		<_short>Preferred decoration mode</_short>
		<default>client</default>
		<desc>
			<value>client</value>
			<_name>Client</_name>
		</desc>
		<desc>
			<value>server</value>
			<_name>Server</_name>
		</desc>
	</option>
	</plugin>
</wayfire>
