<?xml version="1.0"?>
<wayfire>
	<plugin name="example">
	<_short>Example Plugin</_short>
	<option name="string_opt" type="string">
		<_short>String Option</_short>
		<default>this is a string.</default>
	</option>
	<group>
	<_short>Options</_short>
	<option name="str_list_opt" type="string">
		<_short>String List Option</_short>
		<default>two</default>
		<desc>
			<value>one</value>
			<_name>Good</_name>
		</desc>
		<desc>
			<value>two</value>
			<_name>Bad</_name>
		</desc>
		<desc>
			<value>three</value>
			<_name>Ugly</_name>
		</desc>
	</option>
	<option name="int_opt" type="int">
		<_short>Int Option</_short>
		<default>2</default>
	</option>
	<option name="int_list_opt" type="int">
		<_short>Int List Option</_short>
		<default>2</default>
		<min>0</min>
		<max>3</max>
		<desc>
			<value>0</value>
			<_name>One</_name>
		</desc>
		<desc>
			<value>1</value>
			<_name>Two</_name>
		</desc>
		<desc>
			<value>2</value>
			<_name>Three</_name>
		</desc>
		<desc>
			<value>3</value>
			<_name>Four</_name>
		</desc>
	</option>
	</group>
	<group>
	<_short>More Options</_short>
	<subgroup>
	<_short>Click Me</_short>
	<option name="double_opt" type="double">
		<_short>Double Option</_short>
		<default>4.5</default>
	</option>
	<option name="key_opt" type="key">
		<_short>Key Option</_short>
		<default>&lt;Super&gt;&lt;Alt&gt;t</default>
	</option>
	</subgroup>
	<subgroup>
	<_short>Click Me</_short>
	<option name="bool_opt" type="bool">
		<_short>Bool Option</_short>
		<default>true</default>
	</option>
	<option name="button_opt" type="button">
		<_short>Button Option</_short>
		<default>&lt;Super&gt;Button1</default>
	</option>
	</subgroup>
	<option name="color_opt" type="color">
		<_short>Color Option</_short>
		<default>0.1 0.3 0.7 1.0</default>
	</option>
	</group>
	</plugin>
</wayfire>
