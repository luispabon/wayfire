<?xml version="1.0"?>
<wayfire>
	<plugin name="alpha">
	<_short>Alpha</_short>
	<category>Desktop</category>
	<option name="modifier" type="key">
		<_short>Use this modifier with scroll to adjust alpha</_short>
		<default>&lt;alt&gt;</default>
	</option>
	<option name="min_value" type="double">
		<_short>Minimum Value</_short>
		<min>0.0</min>
		<max>1.0</max>
		<precision>0.01</precision>
		<default>0.1</default>
	</option>
	</plugin>
</wayfire>
